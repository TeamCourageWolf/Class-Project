<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="10dip"
	android:paddingRight="10dip">    
    <RadioGroup android:id="@+id/plan_study_options" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:layout_height="wrap_content" android:id="@+id/study_opt_alone" android:text="Study Alone at Home" android:layout_width="wrap_content" android:checked="true"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:id="@+id/study_opt_group_home" android:text="Group Study at Home" android:layout_width="wrap_content"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:id="@+id/study_opt_group_out" android:text="Group Study at Friends Place" android:layout_width="wrap_content"></RadioButton>     
    </RadioGroup>
    <Button android:text="Done Planning" android:id="@+id/plan_study_done_btn" android:layout_width="match_parent" android:layout_height="wrap_content"></Button>
</LinearLayout>